{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ES2017"],
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "**/*.test.ts"
  ]
}
